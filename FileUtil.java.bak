	 */
	@SuppressLint("NewApi")
	public static long getPhoneSelSDCardFreeSize() {
		if (!isSDExist()) {
			return 0;
		}
		File path = Environment.getExternalStorageDirectory();
		StatFs stat = new StatFs(path.getPath());
		return stat.getAvailableBytes();
	}
	
